<Window x:Class="UsbHwID.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsbHwID"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="MainWindowLoaded">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="366">
            <Button Name="Button1" Content="Использовать устройство" Height="48" Click="ButtonSet" ToolTip="Использовать выделенное устройство в качестве идентификатора"/>
            <Button Name="Button2" Content="Обновить список подключенных устройств" Height="48" Click="ButtonUpdate"/>
            <Button Name="Button3" Content="Удалить записаный идентификатор" Height="48" Click="ButtonDelete"/>
            <Label Content="Список USB флеш устройств:"/>
            <ListBox Height="100" x:Name="ListBox"/>
            <Label Content="" Name="Label1"/>
        </StackPanel>

    </Grid>
</Window>
